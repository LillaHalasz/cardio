        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDbJzG3W-lbqW1pzK9v0lrzdDb1ZjUnfXA"/>

        <activity
            android:name=".PersonalDetailsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".HealthMattersActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">


        </activity>
        <activity
            android:name=".WalkingScreenActivity"
            android:label="WalkingScreenActivity">

        </activity>

        <service android:name=".BackgroundLocationService"></service>
        <service android:name=".LocationHandlerIntentService"></service>
        <service android:name=".BackgroundPulseService"></service>

    </application>

</manifest>
